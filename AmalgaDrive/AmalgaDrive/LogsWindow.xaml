<Window x:Class="AmalgaDrive.LogsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AmalgaDrive"
        mc:Ignorable="d"
        Title="Logs" Height="450" Width="800">
    <Grid>
        <TextBox IsReadOnly="True" Name="TB" FontFamily="Lucida Console" FontSize="10">
            <TextBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Clear" Name="Clear" Click="Clear_Click" />
                </ContextMenu>
            </TextBox.ContextMenu>
        </TextBox>
    </Grid>
</Window>
